<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:sec="http://www.springframework.org/security/facelets/tags" 
	template="/WEB-INF/templates/template.xhtml">

	<ui:param name="pageHeading" value="#{messages.rolemanagement_title}" />
	
	<ui:define name="content">
		<h:body>
			<f:event listener="#{roleListController.init}" type="javax.faces.event.PreRenderComponentEvent"></f:event>
				<h:form id="formPanel">
					<p:messages />

					<p:dataTable id="roleList" var="role" value="#{roleListController.roleList}" 
					selection="#{roleListController.roleManagementController.selectedRole}" selectionMode="single"  
					rowKey="#{role.id}">
						<p:ajax event="rowSelect" update=":formPanel" />
			        	<p:column sortBy="#{role.name}">
				            <f:facet name="header">
				                    #{messages.rolemanagement_role_name}
				            </f:facet>
				            <h:outputText value="#{role.name}"/>
				        </p:column> 
					</p:dataTable>
					
					<div class="verticalSpacing"/>
					
					<div class="stickAtRightBorder">
						<p:commandButton value="#{messages.rolemanagement_role_manage_users}" action="#{roleUserAssignmentController.createUserListModel}" update="formPanel" disabled="#{empty roleListController.roleManagementController.selectedRole}" styleClass="marginButton"/>
					    <p:commandButton value="#{messages.rolemanagement_role_manage_permissions}" action="#{rolePermissionAssignmentController.createListModel}" update="formPanel" disabled="#{empty roleListController.roleManagementController.selectedRole}" styleClass="marginButton" />
						<p:commandButton title="#{messages.rolemanagement_role_delete}" value="#{messages.rolemanagement_role_delete}" onclick="confirmation.show()" icon="ui-icon-closethick" rendered="#{sec:ifAnyGranted('Rollen lÃ¶schen, Administratorrecht')}" disabled="#{empty roleListController.roleManagementController.selectedRole}" styleClass="marginButton"/>
					</div>
					
					<p:confirmDialog message="#{messages.rolemanagement_confirmation_title}"  header="#{messages.rolemanagement_role_delete}" severity="alert" widgetVar="confirmation" width="300">  
				        <p:commandButton value="#{messages.yes}" update="formPanel" oncomplete="confirmation.hide()"  
				                    actionListener="#{roleListController.deleteRole}" />  
				        <p:commandButton value="#{messages.no}" onclick="confirmation.hide()" type="button" />   
				    </p:confirmDialog>
				</h:form>
		</h:body>
	</ui:define>
</ui:composition>