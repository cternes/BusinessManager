<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>de</default-locale>
             <supported-locale>de</supported-locale>
             <supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>org.businessmanager.web.jsf.helper.ResourceBundleUTF8</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>
	
	<!-- Inject a phase listener to interfere before rendering phase -->
	<lifecycle>
		<phase-listener>org.businessmanager.web.controller.page.login.LoginController</phase-listener>
		<phase-listener>org.businessmanager.web.jsf.listener.MultiPageMessagesSupport</phase-listener>
	</lifecycle>
	
</faces-config>
