<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui">

	<h:panelGroup rendered="#{(empty rendered || rendered) and not input}">
		<h:outputText value="#{address.street}" />
		<h:outputText value=" #{address.houseNumber}," />
		<h:outputText value=" #{address.zipCode}" />
		<h:outputText value=" #{address.city}" />
	</h:panelGroup>
	
	<p:panel header="#{messages.terminvereinbarung_pruefort}" rendered="#{input and inputVisible}">
		<h:panelGrid columns="2">
			<h:outputLabel value="#{messages.terminbestaetigen_pruefort_strasse}:" />
			<p:inputText value="#{address.street}" />
		  
		  	<h:outputLabel value="#{messages.terminbestaetigen_pruefort_hausnummer}:" />
			<p:inputText value="#{address.houseNumber}" />
			
			<h:outputLabel value="#{messages.terminbestaetigen_pruefort_plz}:" />
			<p:inputMask value="#{address.zipCode}" mask="9999"/>
			
			<h:outputLabel value="#{messages.terminbestaetigen_pruefort_ort}:" />
			<p:inputText value="#{address.city}" />
		</h:panelGrid>
	</p:panel>

</ui:composition>